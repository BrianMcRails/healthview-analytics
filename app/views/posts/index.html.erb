<p id="notice"><%= notice %></p>

<section id="main" class="wrapper">
  <div class="container">

    <header class="major">
      <h2>Welcome to the forum</h2>
      <p>Share your questions and comments with other users!</p>
    </header>
      <p><strong><%= link_to 'New Post', new_post_path %></strong></p>
  </div>
</section>

<% @posts.each do |post| %>
<div class="posts-wrapper">
  <div class="post">
    <div class="post-head">
      <div class="thumb-img">
      </div>
      <div class="user-name">
        <%= current_user.email %>
      </div>
      <div class="time-ago">
        <%= time_ago_in_words post.created_at %>
      </div>
    </div>
    <div class="image center-block">
      <%= link_to (post.title), post_path(post) %>
    </div>
    <div class="post-bottom">
      <div class="caption">
        <div class="caption-content">
          <%= link_to (post.content), post_path(post) %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
